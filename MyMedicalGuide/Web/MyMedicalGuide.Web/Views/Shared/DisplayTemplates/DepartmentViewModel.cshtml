@model MyMedicalGuide.Web.Models.Departments.DepartmentViewModel
<div class="col s12 m6 l4">
    <div class="blog-card">
        <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
                <a href=@Model.Url><img src=@Model.Picture alt="department-img"></a>
            </div>
            <a class="btn-floating waves-effect waves-light light-blue"><i class="mdi-action-info activator"></i></a>

            <div class="card-content">
                <h4 class="card-title grey-text text-darken-4">
                    <a href="#" class="grey-text text-darken-4">@Model.Name</a>
                </h4>

            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4"><i class="mdi-navigation-close right"></i>@Model.Name </span>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>

</div>
